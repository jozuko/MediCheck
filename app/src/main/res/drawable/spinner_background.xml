<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_background"/>
            <corners android:radius="@dimen/image_spinner_radius"/>
            <padding
                android:bottom="@dimen/image_spinner_radius"
                android:top="@dimen/image_spinner_radius"/>
        </shape>
    </item>

    <!-- underline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_background_shadow"/>
            <padding android:bottom="@dimen/image_spinner_under_bar_height"/>
        </shape>
    </item>

    <!-- face -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_background"/>
        </shape>
    </item>

    <!-- 下向き矢印アイコン -->
    <item android:right="@dimen/input_margin">
        <bitmap
            android:dither="false"
            android:gravity="end|right"
            android:src="@mipmap/ic_arrow_down"/>
    </item>

</layer-list>
