<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CheckListItemLayoutStyle"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        style="@style/CheckListItemImageStyle"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/label_margin"
        android:layout_marginRight="@dimen/label_margin"
        android:src="@mipmap/medicine_no_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/label_margin"
        android:layout_marginRight="@dimen/label_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_text"
            style="@style/CheckListItemBigTextStyle"
            android:text="@android:string/unknownName" />

        <TextView
            android:id="@+id/sub_text"
            style="@style/CheckListItemNormalTextStyle"
            android:text="@android:string/unknownName" />

    </LinearLayout>

    <ImageView
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:src="@mipmap/ic_check_off"/>

</LinearLayout>
