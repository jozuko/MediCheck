<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/description_button_layout"
    style="@style/DescriptionButtonChildStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/description_button_background">

    <ImageView
        android:id="@+id/description_button_icon"
        style="@style/DescriptionButtonImageStyle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_take_parson"/>

    <TextView
        android:id="@+id/description_button_text"
        style="@style/DescriptionButtonTextStyle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/description_button_message"
        style="@style/DescriptionButtonMessageStyle"
        android:layout_below="@id/description_button_text"
        android:layout_toEndOf="@id/description_button_icon"
        android:layout_toRightOf="@id/description_button_icon"/>
</RelativeLayout>

