<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.studiojozu.medicheck">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_setting"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/StandardViewTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.MenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".alarm.AlarmBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.studiojozu.medicheck.alarm.medicine_alarm"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".alarm.SystemInfoBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.ACTION_MY_PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.TIME_SET"/>
                <action android:name="android.intent.action.TIMEZONE_CHANGED"/>
                <action android:name="android.intent.action.DATE_CHANGED"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name=".alarm.ResetAlarmBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.studiojozu.medicheck.alarm.reset_medicine_alarm"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>